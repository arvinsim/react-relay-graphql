{
  "name": "twitter-clone-react-graphql",
  "version": "1.0.0",
  "description": "A Twitter clone using React and GraphQL",
  "main": "index.js",
  "repository": "https://github.com/arvinsim/twitter-clone-react-graphql.git",
  "author": "Arthur Vincent Simon <developarvin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "createdb": "./node_modules/.bin/babel-node ./scripts/createdb.js",
    "seeddb": "./node_modules/.bin/babel-node ./scripts/seeddb.js",
    "setupdb": "yarn createdb && yarn seeddb",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "lint": "./node_modules/.bin/eslint ./server ./tests",
    "lint:fix": "./node_modules/.bin/eslint ./server ./tests --fix"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec ./node_modules/.bin/babel-node --presets=es2015 -- ./server/index.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "jest --coverage --no-watchman",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "graphql-tools": "^0.11.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.0",
    "jest-enzyme": "^3.1.0",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.5.4",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "better-npm-run": "^0.0.15",
    "compression": "^1.6.2",
    "debug": "^2.6.6",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.3",
    "knex": "^0.12.9",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router-dom": "^4.1.1",
    "sqlite3": "^3.1.8",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  }
}
